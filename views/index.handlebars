<div class="container">
  <div class="row">
    <div class="col-4">
      <ul>
        <h2>Burgers to eat!</h2>
        {{#each burgers}}
        {{#unless devoured}}

        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    
    <div class="col-4"></div>
    <div class="col-4">
      <ul id="">
        <h2>Devoured Burgers!</h2>
        {{#each burgers}}
        {{#if devoured}}

        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<br><br>
<h2>Add a Burger</h2>



<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Un-Eaten<br>
    <input type="radio" name="devoured" value="1"> Yup...I already ate it!
  </div>

  <button type="submit">Add burger</button>
</form>